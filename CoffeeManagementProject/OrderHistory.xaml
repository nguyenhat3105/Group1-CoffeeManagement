<UserControl x:Class="CoffeeManagement.OrderHistory"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:CoffeeManagement"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="900"
             Background="Transparent">

    <UserControl.Resources>
        <FontFamily x:Key="FontAwesome">/Fonts/#Font Awesome 6 Free Solid</FontFamily>

        <SolidColorBrush x:Key="AccentColor" Color="#D4AF37"/>
        <SolidColorBrush x:Key="AccentForeground" Color="#2A2A2A"/>
        <SolidColorBrush x:Key="PrimaryTextColor" Color="#1C1C1C"/>
        <SolidColorBrush x:Key="SecondaryTextColor" Color="#5A5A5A"/>
        <SolidColorBrush x:Key="CardBackground" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="BorderColor" Color="#E8E8E8"/>


        <Style x:Key="ViewDetailsButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentColor}"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryTextColor}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#E6B93F"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="StatCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardBackground}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="18"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="1" Color="#E0E0E0" Opacity="0.7" BlurRadius="10"/>
                </Setter.Value>
            </Setter>
        </Style>

        <DataTemplate x:Key="MemberRankTemplate">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock x:Name="RankIcon"
                           Text="🏆"
                           Foreground="Gold"
                           FontFamily="{StaticResource FontAwesome}"
                           FontSize="24"
                           VerticalAlignment="Center"
                           Margin="0,0,12,0"/>

                <TextBlock Text="{Binding}"
                           FontSize="24" FontWeight="Bold"
                           Foreground="{StaticResource PrimaryTextColor}"
                           VerticalAlignment="Center"/>
            </StackPanel>

        </DataTemplate>

        <DataTemplate x:Key="OrderItemTemplate">
            <Border BorderBrush="{StaticResource BorderColor}" BorderThickness="1"
                    CornerRadius="8" Padding="20"
                    Margin="0,0,8,12" Background="{StaticResource CardBackground}">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="1" Color="#E0E0E0" Opacity="0.7" BlurRadius="10"/>
                </Border.Effect>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="📋"
                               FontFamily="{StaticResource FontAwesome}"
                               FontSize="22"
                               Foreground="{StaticResource AccentColor}"
                               VerticalAlignment="Center" Margin="0,0,20,0"/>

                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="{Binding Id, StringFormat='Đơn hàng #{0}'}"
                                   FontWeight="SemiBold" FontSize="16"
                                   Foreground="{StaticResource PrimaryTextColor}"/>
                        <TextBlock Text="{Binding CreatedAt, StringFormat='Ngày: {0:dd/MM/yyyy HH:mm}'}"
                                   FontSize="12" Foreground="{StaticResource SecondaryTextColor}"
                                   Margin="0,4,0,0"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2" HorizontalAlignment="Right" VerticalAlignment="Center">
                        <TextBlock Text="{Binding TotalAmount, StringFormat='{}{0:N0}đ'}"
                                   FontWeight="Bold" FontSize="18"
                                   Foreground="{StaticResource PrimaryTextColor}"
                                   HorizontalAlignment="Right"/>
                        <Button Content="Xem chi tiết"
                                Foreground="White"
                                Height="35"
                                Width="110"
                                Click="BtnViewDetails_Click"
                                Margin="0,8,0,0"
                                HorizontalAlignment="Right"
                                Style="{StaticResource ViewDetailsButtonStyle}"/>
                    </StackPanel>

                </Grid>
            </Border>
        </DataTemplate>

    </UserControl.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="🧾 Lịch sử mua hàng"
                   FontSize="24"
                   FontWeight="SemiBold"
                   Foreground="{StaticResource PrimaryTextColor}"
                   Margin="0,0,0,15"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <ScrollViewer Grid.Column="0" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                <ItemsControl x:Name="OrdersList" ItemTemplate="{StaticResource OrderItemTemplate}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Vertical"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
            </ScrollViewer>

            <StackPanel Grid.Column="1" Margin="25,0,0,0">

                <TextBlock Text="✨ Thông tin và Ưu đãi"
                           FontSize="20" FontWeight="SemiBold"
                           Foreground="{StaticResource PrimaryTextColor}"
                           Margin="0,0,0,15"/>

                <Border Style="{StaticResource StatCardStyle}">
                    <StackPanel>
                        <TextBlock Text="HẠNG THÀNH VIÊN"
                                   FontSize="12" FontWeight="SemiBold"
                                   Foreground="{StaticResource SecondaryTextColor}"
                                   Margin="0,0,0,5"/>
                        <ContentControl x:Name="MemberRankControl" ContentTemplate="{StaticResource MemberRankTemplate}"/>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource StatCardStyle}">
                    <StackPanel>
                        <TextBlock Text="TỔNG CHI TIÊU"
                                   FontSize="12" FontWeight="SemiBold"
                                   Foreground="{StaticResource SecondaryTextColor}"
                                   Margin="0,0,0,5"/>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="💸"
                                       FontFamily="{StaticResource FontAwesome}"
                                       FontSize="24"
                                       Foreground="Green"
                                       VerticalAlignment="Center" Margin="0,0,12,0"/>
                            <TextBlock x:Name="TxtTotalSpent"
                                       Text="0đ"
                                       FontSize="24" FontWeight="Bold"
                                       Foreground="{StaticResource PrimaryTextColor}"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource StatCardStyle}">
                    <StackPanel>
                        <TextBlock Text="TỔNG SỐ ĐƠN HÀNG"
                                   FontSize="12" FontWeight="SemiBold"
                                   Foreground="{StaticResource SecondaryTextColor}"
                                   Margin="0,0,0,5"/>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="📦"
                                       FontFamily="{StaticResource FontAwesome}"
                                       FontSize="24"
                                       Foreground="Blue"
                                       VerticalAlignment="Center" Margin="0,0,12,0"/>
                            <TextBlock x:Name="TxtTotalOrders"
                                       Text="0"
                                       FontSize="24" FontWeight="Bold"
                                       Foreground="{StaticResource PrimaryTextColor}"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource StatCardStyle}">
                    <StackPanel>
                        <TextBlock Text="MÓN YÊU THÍCH"
                                   FontSize="12" FontWeight="SemiBold"
                                   Foreground="{StaticResource SecondaryTextColor}"
                                   Margin="0,0,0,5"/>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="💖"
                                       FontFamily="{StaticResource FontAwesome}"
                                       FontSize="24"
                                       Foreground="Red"
                                       VerticalAlignment="Center" Margin="0,0,12,0"/>
                            <TextBlock x:Name="TxtFavoriteItem"
                                       Text="Chưa có"
                                       FontSize="24" FontWeight="Bold"
                                       Foreground="{StaticResource PrimaryTextColor}"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

            </StackPanel>

        </Grid>
    </Grid>
</UserControl>