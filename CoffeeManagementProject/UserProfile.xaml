<UserControl x:Class="CoffeeManagement.UserProfile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800"
             Background="Transparent">

    <UserControl.Resources>
        <SolidColorBrush x:Key="AccentColor" Color="#D4AF37"/>
        <SolidColorBrush x:Key="AccentForeground" Color="#2A2A2A"/>
        <SolidColorBrush x:Key="AccentHover" Color="#E6B93F"/>
        <SolidColorBrush x:Key="PrimaryTextColor" Color="#333"/>
        <SolidColorBrush x:Key="SecondaryTextColor" Color="#666"/>
        <SolidColorBrush x:Key="CardBackground" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="DataFieldBackground" Color="#F8F8F8"/>
        <SolidColorBrush x:Key="DataFieldBorder" Color="#E0E0E0"/>

        <Style x:Key="EditProfileButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentColor}"/>
            <Setter Property="Foreground" Value="{StaticResource AccentForeground}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Margin" Value="0,15,0,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Width" Value="150"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource AccentHover}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource SecondaryTextColor}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="Margin" Value="0,0,15,0"/>
        </Style>

        <Style x:Key="DataFieldStyle" TargetType="TextBox">
            <Setter Property="Background" Value="{StaticResource DataFieldBackground}"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryTextColor}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="MinHeight" Value="36"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="BorderBrush" Value="{StaticResource DataFieldBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="Focusable" Value="False"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                          Padding="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <!-- ====================== UI MAIN ====================== -->
    <Grid Margin="20">
        <Border Background="{StaticResource CardBackground}" CornerRadius="10" Padding="0" MaxWidth="800">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="2" Color="#D0D0D0" Opacity="0.8" BlurRadius="15"/>
            </Border.Effect>

            <DockPanel LastChildFill="True">

                <!-- Banner -->
                <Border DockPanel.Dock="Top" Background="{StaticResource AccentColor}" Height="120" CornerRadius="10,10,0,0">
                    <Grid>
                        <TextBlock Text="👤 User Profile" 
                                   FontSize="26" 
                                   FontWeight="Bold" 
                                   Foreground="White"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"/>
                    </Grid>
                </Border>

                <!-- Profile Content -->
                <Grid Margin="30">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Avatar -->
                    <!-- Avatar -->
                    <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                        <Grid Width="120" Height="120">
                            <!-- Vòng tròn avatar -->
                            <Ellipse Stroke="{StaticResource AccentColor}"
                 StrokeThickness="3"
                 Width="120" Height="120">
                                <Ellipse.Fill>
                                    <ImageBrush ImageSource="{Binding ElementName=AvatarImage, Path=Source}"
                            Stretch="UniformToFill"/>
                                </Ellipse.Fill>
                            </Ellipse>

                            <!-- Hidden Image: dùng để load ảnh từ code-behind -->
                            <Image x:Name="AvatarImage" Visibility="Collapsed"/>
                        </Grid>

                        <TextBlock Text="{Binding Text, ElementName=TxtFullName}" 
               Margin="0,10,0,0"
               FontSize="16"
               FontWeight="Bold"
               Foreground="{StaticResource PrimaryTextColor}"
               HorizontalAlignment="Center"/>

                        <Button Content="Cập nhật ảnh" Width="120" Height="32" Margin="0,10,0,0"
Click="BtnUpdateAvatar_Click"/>
                    </StackPanel>


                    <!-- Info Fields -->
                    <StackPanel Grid.Column="1" Margin="30,0,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" HorizontalAlignment="Left"  Text="Full Name:" Style="{StaticResource LabelStyle}"/>
                            <TextBox x:Name="TxtFullName" Grid.Row="0" Grid.Column="1" Style="{StaticResource DataFieldStyle}" Margin="0,0,0,15"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" HorizontalAlignment="Left"  Text="Email:" Style="{StaticResource LabelStyle}"/>
                            <TextBox x:Name="TxtEmail" Grid.Row="1" Grid.Column="1" Style="{StaticResource DataFieldStyle}" Margin="0,0,0,15"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" HorizontalAlignment="Left"  Text="Username:" Style="{StaticResource LabelStyle}"/>
                            <TextBox x:Name="TxtUsername" Grid.Row="2" Grid.Column="1" Style="{StaticResource DataFieldStyle}" Margin="0,0,0,15"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" HorizontalAlignment="Left"  Text="Role:" Style="{StaticResource LabelStyle}"/>
                            <TextBox x:Name="TxtRole" Grid.Row="3" Grid.Column="1" Style="{StaticResource DataFieldStyle}" Margin="0,0,0,15"/>

                            <TextBlock Grid.Row="4" Grid.Column="0" HorizontalAlignment="Left"  Text="Created At:" Style="{StaticResource LabelStyle}"/>
                            <TextBox x:Name="TxtCreatedAt" Grid.Row="4" Grid.Column="1" Style="{StaticResource DataFieldStyle}" Margin="0,0,0,15"/>

                            <Button x:Name="BtnEdit" Content="Edit Profile"
                                    Grid.Row="5" Grid.Column="1"
                                    Height="40"
                                    Foreground="White"
                                    Style="{StaticResource EditProfileButtonStyle}"
                                    HorizontalAlignment="Left"
                                    Click="BtnEdit_Click"/>
                        </Grid>
                    </StackPanel>
                </Grid>
            </DockPanel>
        </Border>
    </Grid>
</UserControl>
