<UserControl x:Class="CoffeeManagement.AdminAllOrdersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:CoffeeManagement"
             Background="#FAFAFA"
             MinWidth="900" MinHeight="600">

    <UserControl.Resources>
        <SolidColorBrush x:Key="AccentColor" Color="#D4AF37"/>
        <SolidColorBrush x:Key="PrimaryTextColor" Color="#1C1C1C"/>
        <SolidColorBrush x:Key="SecondaryTextColor" Color="#5A5A5A"/>
        <SolidColorBrush x:Key="CardBackground" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="BorderColor" Color="#E8E8E8"/>
        <SolidColorBrush x:Key="StatusPending" Color="#007BFF"/>
        <SolidColorBrush x:Key="StatusCompleted" Color="#28A745"/>
        <SolidColorBrush x:Key="StatusCancelled" Color="#DC3545"/>
        <SolidColorBrush x:Key="StatusText" Color="#FFFFFF"/>

        <Style TargetType="ComboBox">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Height" Value="32"/>
        </Style>
        <Style TargetType="DatePicker">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Height" Value="32"/>
        </Style>

        <Style x:Key="SearchTextBoxStyle" TargetType="TextBox">
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="30,5,10,5"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Grid>
                            <Border x:Name="border"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="5"/>
                            <TextBlock Text="🔍" 
                                       Foreground="{StaticResource SecondaryTextColor}"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Left"
                                       Margin="10,0,0,0"/>
                            <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="RefreshButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource StatusPending}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="5">
                            <StackPanel Orientation="Horizontal" Margin="{TemplateBinding Padding}"
                                        HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock Text="🔄"
                                           VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <ContentPresenter/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DetailsButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentColor}"/>
            <Setter Property="Foreground" Value="#1C1C1C"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#E6B93F"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <DataTemplate x:Key="OrderCardTemplate">
            <Border BorderThickness="1" CornerRadius="8"
            Padding="15" Margin="0,0,0,10">
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Background" Value="{StaticResource CardBackground}"/>
                        <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
                        <Setter Property="Effect">
                            <Setter.Value>
                                <DropShadowEffect ShadowDepth="1" Color="#E0E0E0" Opacity="0.5" BlurRadius="5"/>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="{StaticResource AccentColor}"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>

                <!-- GRID CĂN CHUẨN -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50"/>
                        <!-- Icon -->
                        <ColumnDefinition Width="*"/>
                        <!-- Thông tin đơn -->
                        <ColumnDefinition Width="150"/>
                        <!-- Trạng thái -->
                        <ColumnDefinition Width="120"/>
                        <!-- Tổng tiền -->
                        <ColumnDefinition Width="110"/>
                        <!-- Nút chi tiết -->
                    </Grid.ColumnDefinitions>

                    <!-- ICON -->
                    <TextBlock Grid.Column="0" Text="🧾" 
                       FontSize="24"
                       Foreground="{StaticResource AccentColor}"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>

                    <!-- THÔNG TIN ĐƠN -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock FontWeight="Bold" FontSize="16" Foreground="{StaticResource PrimaryTextColor}">
                    <Run Text="Đơn #"/>
                    <Run Text="{Binding Id}"/>
                        </TextBlock>
                        <TextBlock FontSize="13" Foreground="{StaticResource SecondaryTextColor}" Margin="0,4,0,0">
                    <Run Text="Khách:"/>
                    <Run Text="{Binding Customer.LastName, FallbackValue='Khách lẻ', TargetNullValue='Khách lẻ'}" FontWeight="SemiBold"/>
                        </TextBlock>
                        <TextBlock Text="{Binding CreatedAt, StringFormat='Ngày: {0:dd/MM/yyyy HH:mm}'}"
                           FontSize="12" Foreground="{StaticResource SecondaryTextColor}" Margin="0,4,0,0"/>
                    </StackPanel>

                    <!-- TRẠNG THÁI -->
                    <Border Grid.Column="2" 
                    Padding="8,5" CornerRadius="5" 
                    VerticalAlignment="Center" HorizontalAlignment="Center">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Background" Value="{StaticResource StatusPending}"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Status}" Value="1">
                                        <Setter Property="Background" Value="{StaticResource StatusCompleted}"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Status}" Value="2">
                                        <Setter Property="Background" Value="{StaticResource StatusCancelled}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <TextBlock FontSize="12" FontWeight="Bold"
                           Foreground="{StaticResource StatusText}" 
                           HorizontalAlignment="Center">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Text" Value="ĐANG XỬ LÝ"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Status}" Value="1">
                                            <Setter Property="Text" Value="HOÀN THÀNH"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Status}" Value="2">
                                            <Setter Property="Text" Value="ĐÃ HỦY"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Border>

                    <!-- TỔNG TIỀN -->
                    <TextBlock Grid.Column="3"
                       Text="{Binding TotalAmount, StringFormat='{}{0:N0}đ'}"
                       FontWeight="Bold"
                       Foreground="{StaticResource StatusCompleted}"
                       FontSize="18"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>

                    <!-- NÚT CHI TIẾT -->
                    <Button Grid.Column="4" 
                    Content="Chi tiết"
                    Click="BtnViewDetails_Click"
                    Width="100" Height="40"
                    Style="{StaticResource DetailsButtonStyle}"
                    Foreground="White"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"/>
                </Grid>
            </Border>
        </DataTemplate>


    </UserControl.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="📜 Quản Lý Đơn Hàng"
                   FontSize="24" FontWeight="Bold"
                   Foreground="{StaticResource PrimaryTextColor}"
                   Margin="0,0,0,15"/>

        <Border Grid.Row="1" Background="{StaticResource CardBackground}" 
                BorderBrush="{StaticResource BorderColor}"
                BorderThickness="1" CornerRadius="8" 
                Padding="15" Margin="0,0,0,15">
            <StackPanel Orientation="Horizontal" >

                <TextBlock Text="Khách hàng:" VerticalAlignment="Center" Margin="20,0,8,0"
                           Foreground="{StaticResource SecondaryTextColor}"/>
                <TextBox x:Name="CustomerSearchBox"
                         Width="180"
                         Height="35"
                         TextChanged="Filter_Changed" 
                         Style="{StaticResource SearchTextBoxStyle}"/>

                <TextBlock Text="Từ:" VerticalAlignment="Center" Margin="20,0,8,0"
                           Foreground="{StaticResource SecondaryTextColor}"/>
                <DatePicker x:Name="FromDatePicker" SelectedDateChanged="Filter_Changed"/>

                <TextBlock Text="Đến:" VerticalAlignment="Center" Margin="10,0,8,0"
                           Foreground="{StaticResource SecondaryTextColor}"/>
                <DatePicker x:Name="ToDatePicker" SelectedDateChanged="Filter_Changed"/>

                <Button Content="Làm mới"
                        Click="BtnRefresh_Click"
                        Margin="20,0,0,0"
                        HorizontalAlignment="Right"
                        Style="{StaticResource RefreshButtonStyle}"/>
            </StackPanel>
        </Border>

        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="OrdersList" 
                          ItemTemplate="{StaticResource OrderCardTemplate}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Vertical"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>