<Window x:Class="CoffeeManagement.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Coffee Management" Height="720" Width="1280" 
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" 
        WindowState="Maximized"
        AllowsTransparency="True" 
        ResizeMode="CanResizeWithGrip"
        Background="Transparent">

    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryBackground" Color="#2A2A2A"/>
        <SolidColorBrush x:Key="SecondaryBackground" Color="#3C3C3C"/>
        <SolidColorBrush x:Key="AccentColor" Color="#D4AF37"/>
        <SolidColorBrush x:Key="TextColorLight" Color="#E0E0E0"/>
        <SolidColorBrush x:Key="ContentBackground" Color="#F4F4F4"/>
        <SolidColorBrush x:Key="ButtonHover" Color="#4A4A4A"/>
        <SolidColorBrush x:Key="ButtonAccentHover" Color="#E6B93F"/>

        <Style x:Key="WindowControlButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextColorLight}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource SecondaryBackground}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="CloseButtonStyle" TargetType="Button" BasedOn="{StaticResource WindowControlButton}">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="DarkRed"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="NavigationButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextColorLight}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontFamily" Value="Segoe UI Light"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="Margin" Value="8,4"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource ButtonHover}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource SecondaryBackground}"/>
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.98" ScaleY="0.98"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
        </Style>

        <Style x:Key="LogoutButtonStyle" TargetType="Button" BasedOn="{StaticResource NavigationButtonStyle}">
            <Setter Property="Foreground" Value="{StaticResource AccentColor}"/>
            <Setter Property="FontFamily" Value="Segoe UI Semibold"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource AccentColor}"/>
                    <Setter Property="Foreground" Value="{StaticResource PrimaryBackground}"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="{StaticResource ButtonAccentHover}"/>
                    <Setter Property="Foreground" Value="{StaticResource PrimaryBackground}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

    </Window.Resources>

    <Border Background="{StaticResource PrimaryBackground}" 
            CornerRadius="10" 
            Padding="1">
        <Border.Effect>
            <DropShadowEffect ShadowDepth="0" Color="Black" Opacity="0.4" BlurRadius="20"/>
        </Border.Effect>

        <DockPanel>

            <Grid DockPanel.Dock="Top" Height="50" Background="Transparent" MouseLeftButtonDown="Window_DragMove">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:Name="BtnMinimize" Content="&#xE921;" Style="{StaticResource WindowControlButton}" Click="MinimizeButton_Click"/>
                    <Button x:Name="BtnMaximize" Content="&#xE922;" Style="{StaticResource WindowControlButton}" Click="MaximizeButton_Click"/>
                    <Button x:Name="BtnClose" Content="&#xE8BB;" Style="{StaticResource CloseButtonStyle}" Click="CloseButton_Click"/>
                </StackPanel>
            </Grid>

            <!-- LEFT NAV: replaced StackPanel with Grid to allow bottom avatar area -->
            <Grid DockPanel.Dock="Left" Width="230" Background="{StaticResource SecondaryBackground}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <!-- scrollable nav -->
                    <RowDefinition Height="Auto"/>
                    <!-- avatar area -->
                </Grid.RowDefinitions>

                <!-- Scrollable navigation buttons -->
                <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Padding="0">
                    <StackPanel>
                        <TextBlock Text="Coffee Management" 
                                   Foreground="{StaticResource AccentColor}" 
                                   FontWeight="Bold" 
                                   FontSize="18"
                                   TextAlignment="Center"
                                   Margin="12,20,12,15" />

                        <Button x:Name="BtnUsers" Style="{StaticResource NavigationButtonStyle}" Click="Nav_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE716;" FontFamily="Segoe MDL2 Assets" VerticalAlignment="Center" Margin="0,0,12,0" FontSize="16"/>
                                <TextBlock Text="User Management" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button x:Name="BtnProfile" Style="{StaticResource NavigationButtonStyle}" Click="Nav_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE77B;" FontFamily="Segoe MDL2 Assets" VerticalAlignment="Center" Margin="0,0,12,0" FontSize="16"/>
                                <TextBlock Text="Profile" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button x:Name="BtnMenu" Style="{StaticResource NavigationButtonStyle}" Click="Nav_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE734;" FontFamily="Segoe MDL2 Assets" VerticalAlignment="Center" Margin="0,0,12,0" FontSize="16"/>
                                <TextBlock Text="Menu Management" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button x:Name="BtnOrders" Style="{StaticResource NavigationButtonStyle}" Click="Nav_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE8A0;" FontFamily="Segoe MDL2 Assets" VerticalAlignment="Center" Margin="0,0,12,0" FontSize="16"/>
                                <TextBlock Text="Order Staff" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button x:Name="BtnAdminOrders" Style="{StaticResource NavigationButtonStyle}" Click="Nav_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE785;" FontFamily="Segoe MDL2 Assets" VerticalAlignment="Center" Margin="0,0,12,0" FontSize="16"/>
                                <TextBlock Text="Order Management" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button x:Name="BtnAdminDashboard" Style="{StaticResource NavigationButtonStyle}" Click="Nav_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE75F;" FontFamily="Segoe MDL2 Assets" VerticalAlignment="Center" Margin="0,0,12,0" FontSize="16"/>
                                <TextBlock Text="Dashboard" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button x:Name="BtnMenuUI" Style="{StaticResource NavigationButtonStyle}" Click="Nav_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE7B8;" FontFamily="Segoe MDL2 Assets" VerticalAlignment="Center" Margin="0,0,12,0" FontSize="16"/>
                                <TextBlock Text="Menu" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button x:Name="BtnOrderHistory" Style="{StaticResource NavigationButtonStyle}" Click="Nav_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE8F3;" FontFamily="Segoe MDL2 Assets" VerticalAlignment="Center" Margin="0,0,12,0" FontSize="16"/>
                                <TextBlock Text="Order History" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button x:Name="BtnPromotion" Style="{StaticResource NavigationButtonStyle}" Click="Nav_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE8F3;" FontFamily="Segoe MDL2 Assets" VerticalAlignment="Center" Margin="0,0,12,0" FontSize="16"/>
                                <TextBlock Text="Promotion" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Border Height="1" Background="{StaticResource ButtonHover}" Margin="10,12"/>

                        <Button x:Name="BtnLogout" Style="{StaticResource LogoutButtonStyle}" Click="BtnLogout_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE7E8;" FontFamily="Segoe MDL2 Assets" VerticalAlignment="Center" Margin="0,0,12,0" FontSize="16"/>
                                <TextBlock Text="Logout" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </ScrollViewer>

                <!-- Bottom avatar + name area -->
                <Border Grid.Row="1" Padding="12" Background="Transparent">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="4,6,4,6">
                        <!-- avatar circle -->
                        <Grid Width="50" Height="50" Margin="4,0,8,0">
                            <Ellipse Stroke="{StaticResource AccentColor}" StrokeThickness="1" Width="44" Height="44">
                                <Ellipse.Fill>
                                    <!-- bind to NavAvatarImage.Source via ElementName -->
                                    <ImageBrush ImageSource="{Binding Source={x:Reference NavAvatarImage}, Path=Source}" Stretch="UniformToFill"/>
                                </Ellipse.Fill>
                            </Ellipse>
                            <!-- hidden image to be set in code-behind -->
                            <Image x:Name="NavAvatarImage" Visibility="Collapsed"/>
                        </Grid>

                        <StackPanel VerticalAlignment="Center">
                            <!-- user friendly name -->
                            <TextBlock x:Name="NavUserName" Text="Guest" Foreground="{StaticResource TextColorLight}" FontWeight="SemiBold" FontSize="16"/>
                            <TextBlock x:Name="NavUserRole" Text="Staff" Foreground="{StaticResource AccentColor}" FontSize="14"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>

            <Border Background="{StaticResource ContentBackground}" 
                    Padding="12" 
                    CornerRadius="8,0,0,0">
                <ContentControl x:Name="ContentRegion"/>
            </Border>

        </DockPanel>
    </Border>
</Window>
